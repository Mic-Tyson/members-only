<h1> <%= @post.title %> </h1>

<p> <%= @post.body %> </p>

<% if false %>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to 'Back to Articles', articles_path %></li>
  <li>
    <%= 
    link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } 
    %>
  </li>
</ul>
<% end %>
